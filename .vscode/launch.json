{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Node Scraper - Historical",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node-scraper/src/index.js",
            "cwd": "${workspaceFolder}/node-scraper",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PLAYWRIGHT_HEADLESS": "false"
            },
            "envFile": "${workspaceFolder}/node-scraper/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--historical"]
        },
        {
            "name": "Debug Node Server And Agent",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/node-server",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/node-server/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "serverReadyAction": {
                "pattern": "Server is running on port ([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "debugWithChrome"
            }
        },

        {
            "name": "Debug Homework Agent",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--scrape"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Agent: Interactive Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_agent.py",
            "console": "integratedTerminal",
            "args": [
                "--interactive"
            ],
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Agent: Single Question (Today)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_agent.py",
            "console": "integratedTerminal",
            "args": [
                "--question",
                "What's my homework for today?"
            ],
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Agent: Dry Run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_agent.py",
            "console": "integratedTerminal",
            "args": [
                "--question",
                "List homework",
                "--dry-run"
            ],
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Agent: Specific Date",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_agent.py",
            "console": "integratedTerminal",
            "args": [
                "--date",
                "2025-11-13",
                "--question",
                "What homework do I have?"
            ],
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Agent Server",
            "type": "debugpy",
            "request": "launch",
            "module": "agent.index",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Agent Main",
            "type": "debugpy",
            "request": "launch",
            "module": "agent.agent",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}
