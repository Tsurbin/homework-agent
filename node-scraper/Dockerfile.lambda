# Use AWS Lambda Node.js 18 runtime
FROM public.ecr.aws/lambda/nodejs:18

# Install dependencies for Chromium
RUN yum update -y && \
    yum install -y \
    atk \
    cups-libs \
    gtk3 \
    libXcomposite \
    alsa-lib \
    libXcursor \
    libXdamage \
    libXext \
    libXi \
    libXrandr \
    libXScrnSaver \
    libXtst \
    pango \
    at-spi2-atk \
    libXt \
    xorg-x11-server-Xvfb \
    xorg-x11-xauth \
    dbus-glib \
    dbus-glib-devel \
    nss \
    mesa-libgbm \
    && yum clean all

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/

# Set environment variables
ENV NODE_ENV=production

# Copy Lambda handler
COPY lambda-handler.js ${LAMBDA_TASK_ROOT}/

# Set the Lambda handler
CMD [ "lambda-handler.handler" ]