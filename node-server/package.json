{
  "name": "homework-server",
  "version": "0.1.0",
  "description": "WhatsApp webhook bridge (Node.js + Express) for the homework-agent. Receives WhatsApp messages (Twilio) and forwards them to the agent.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_OPTIONS='--no-warnings' tsx --tsconfig tsconfig.json src/index.ts",
    "build": "tsc",
    "deploy:lambda": "./deploy-lambda.sh",
    "mcp": "tsx src/mcp-server.ts",
    "lint": "eslint src/**/*.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/client-secrets-manager": "^3.962.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "serverless-http": "^4.0.0",
    "twilio": "^4.5.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
